<Page x:Class="BookStats.Pages.ToolPages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookStats.Pages.ToolPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Foreground="{StaticResource ColorAccent}" Text="Логин:"/>
                <TextBox Name="tbLogin" Width="200"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Foreground="{StaticResource ColorAccent}" Text="Пароль:"/>
                <PasswordBox Name="tbPassword" Width="200"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Button Name="btnLogin" Click="BtnLogin_Click">
                    <TextBlock Text="Войти" Foreground="{StaticResource ColorText0}"/>
                </Button>
                <TextBlock Width="auto"><Hyperlink Click="BtnToRegister_Click">Создать аккаунт?</Hyperlink></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

